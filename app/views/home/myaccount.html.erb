                            <h3>予想ダウンロード数</h3>
                            <p></p>
                        </div>
                        <div class="deal-cost-wrapper">
                            <h3>広告費</h3>
                            <p></p>
                        </div>
                        
                        
                        <div id="deal-modal-close">閉じる</div>
                    </div>
                </div>
                
                
                
                
                
            </div>
        <% elsif @current_user_ad %>
