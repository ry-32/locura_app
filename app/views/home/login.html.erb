<main>
    
    <section class="top-wrapper">
        <div class="top-h1-wrapper">
            <h1 class="top-h1">
                CONTACT OUR SALES TEAM
            </h1>
        </div>
    </section>
    
    <section class="contact-wrapper">
        <div class="contact-container">
            <h2 class="contact-title">ログインする</h2>
            <div class="contact-form-wrapper">
                <div class="error-message-wrapper">
                    <div class="error-title">エラー</div>
                    <ul class="error-message-ul">
                        <% if @error_message %>
                            <li>
                                <%= @error_message %>
                            </li>
                        <% end %>
                        
                        <% if @advertiser.present? %>
                            <% if @advertiser.errors.any? %>
                                <% @advertiser.errors.full_messages.each do |msg| %>
                                    <li>
                                        <%= msg %>
                                    </li>
                                <% end %>
                            <% end %>
                        <% end %>
                        
                        <% if @podcaster.present? %>
                            <% if @podcaster.errors.any? %>
                                <% @podcaster.errors.full_messages.each do |msg| %>
                                    <li>
                                        <%= msg %>
                                    </li>
                                <% end %>
                            <% end %>
                        <% end %>    
                    </ul>
                </div>
            </div>
            
                <div class="form-body login-form-body">
                    <%= form_tag("/login", method: :get) do %>
                        <div class="form-items login-form-items">
                            <div class="form-email-wrapper form-container">
                                <label for="email" accesskey="n" class="form-item">メール</label>
                                <input name="email" id="email" class="form-text-area form-item">
                            </div>
                            <div class="form-password-wrapper form-container">
                                <label for="password" accesskey="n" class="form-item">パスワード</label>
                                <input name="password" id="password" class="form-text-area form-item">
                            </div>
                            <div class="form-btn-wrapper">
                                <input type="submit" value="送信" class="form-btn btn form-submit-item"> 
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </section>
    
 
    
    <footer>
        <div class="footer-wrapper">
            <div class="footer-ul-wrapper">
                <ul class="footer-ul">
                    <li>
                        <%= link_to 'お問い合わせ', '/' %>
                    </li>
                    <li>
                        <%= link_to '広告主', '/advertisers' %>
                    </li>
                    <li>
                        <%= link_to '番組ホスト', '/podcasters' %>
                    </li>
                </ul>
            </div>
            
        </div>
        
    </footer>

</main>